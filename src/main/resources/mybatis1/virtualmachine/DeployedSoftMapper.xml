<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="DeployedSoftMapper">
	<!--表名 -->
	<sql id="tableName">
		t_deployed_soft
	</sql>
	
	
	<!-- 字段 -->
	<sql id="fieldName">
		id,
		virtualmachineId,
		virtualmachineName,
		softName,
		softParams,
		status,
		remark
	</sql>
	
	
	<!-- 字段值 -->
	<sql id="fieldValue">
		#{id},
		#{virtualmachineId},
		#{virtualmachineName},
		#{softName},
		#{softParams},
		#{status},
		#{remark}
	</sql>
	
	<!-- 字段 -->
	<sql id="saveFieldName">
		virtualmachineId,
		virtualmachineName,
		softName,
		softParams,
		status,
		remark
	</sql>
	
	<sql id="saveFieldValue">
		#{virtualmachineId},
		#{virtualmachineName},
		#{softName},
		#{softParams},
		#{status},
		#{remark}
	</sql>
	
	<!-- 新增 -->
	<insert id="save"  useGeneratedKeys="true" keyProperty="id"  parameterType="com.cmp.entity.DeployedSoft" >
		insert into <include refid="tableName"/> (
			<include refid="saveFieldName"/>
		) values (
			<include refid="saveFieldValue"/>
		)
	</insert>
	
	<!-- 通过虚拟机ID 查询 -->
	<select id="findByVmId" resultType="com.cmp.entity.DeployedSoft" parameterType="String">
		select * from  <include refid="tableName"/> where virtualmachineId = #{virtualmachineId}
	</select>
	
</mapper>