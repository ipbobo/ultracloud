<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="AreaEnvironmentMapper">
	
	<!--表名 -->
	<sql id="tableName">
		t_area_environment_map
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		id,	
		area_id,
		environment_id
	</sql>
		
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{id},	
		#{area_id},
		#{environment_id}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	area_id,environment_id
		) values (
	#{area_id},#{environment_id}
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
		<if test="id!=null and id!=''"><!-- 根据ID过滤 -->
			id = #{id}
		</if>
		<if test="area_id!=null and area_id!=''">
			area_id = #{area_id}
		</if>
		<if test="id!=null and id!=''">
			environment_id = #{environment_id}
		</if>
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			area_id = #{area_id},
		where 
			environment_id = #{environment_id}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
		<if test="id!=null and id!=''"><!-- 根据ID过滤 -->
			id = #{id}
		</if>
		<if test="area_id!=null and area_id!=''">
			area_id = #{area_id}
		</if>
		<if test="id!=null and id!=''">
			environment_id = #{environment_id}
		</if>
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd" >
		select  *
		from 
		<include refid="tableName"></include> 
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select  *
		from 
		<include refid="tableName"></include>
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			id in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	<!-- 列表查询 -->
	<select id="getEnvList" parameterType="String" resultType="com.cmp.sid.CmpDict">
		select id dictCode, name dictValue from <include refid="tableName"></include>
	</select>
</mapper>